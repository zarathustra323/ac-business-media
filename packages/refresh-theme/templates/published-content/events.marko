import defaultValue from "@base-cms/marko-core/utils/default-value";

$ const title = defaultValue(data.title, "Events");
$ const now = Date.now();

<refresh-theme-published-content-layout title=title description=data.description>
  <@query
    name="all-published-content"
    params={
      contentTypes: ["Event"],
      limit: 12,
      endingAfter: now,
      sortField: "startDate",
      sortOrder: "asc",
    }
  />
</refresh-theme-published-content-layout>
